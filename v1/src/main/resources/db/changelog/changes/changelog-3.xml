<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.2.xsd">

    <changeSet author="Fistedar" id="6">
        <createTable tableName="country_default_day_rate">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints primaryKey="true"/>
            </column>
            <column name="classifier_value_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="default_day_rate" type="DECIMAL(10,2)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet author="Fistedar" id="7">
        <createIndex indexName="ix_country_default_day_rate_classifier_value_id"
                     tableName="country_default_day_rate"
                     unique="true">
            <column name="classifier_value_id"/>
        </createIndex>
        <addForeignKeyConstraint baseTableName="country_default_day_rate"
                                 baseColumnNames="classifier_value_id"
                                 constraintName="fk_classifier_value_id"
                                 referencedTableName="classifier_values"
                                 referencedColumnNames="id"/>
    </changeSet>

</databaseChangeLog>