<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.2.xsd">

    <changeSet author = "Fistedar" id = "9">
        <createTable tableName="medical_risk_limit_level">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints primaryKey="true"/>
            </column>
            <column name="classifier_value_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="coefficient" type="DECIMAL(10,2)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet author="Fistedar" id="10">
        <createIndex indexName="ix_medical_risk_limit_level_classifier_value_id"
                     tableName="medical_risk_limit_level"
                     unique="true">
            <column name="classifier_value_id"/>
        </createIndex>
        <addForeignKeyConstraint baseTableName="medical_risk_limit_level"
                                 baseColumnNames="classifier_value_id"
                                 constraintName="fk_medical_risk_limit_level"
                                 referencedTableName="classifier_values"
                                 referencedColumnNames="id"/>
    </changeSet>

</databaseChangeLog>